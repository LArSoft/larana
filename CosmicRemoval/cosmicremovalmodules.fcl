    SpillVetoCounter: 2
    dTLimit: 8
    dWLimit: 8
    TrackModuleLabel: "track" #"beziertracker"
    ClusterModuleLabel: "cluster" #"dbcluster"
    DoTrackCheck: 1 # 0
    DoClusterCheck: 1 # 1
